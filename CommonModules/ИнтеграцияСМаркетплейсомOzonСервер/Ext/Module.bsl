	ДанныеПоАтрибутам.service_type  = "IS_CODE_SERVICE";

	// Данные по упаковке.
	ДанныеПоАтрибутам.weight_unit    = ДанныеДляПубликации.ВесогабаритныеХарактеристикиУпаковки.ЕдиницаВеса;
